#!/usr/bin/env bash
# Configuration Nginx server so that /redirect_me is redirecting to another page.
REDIRECTION="location /redirect_me {\n return 301 https://www.youtube.com;\n}\n"
sudo apt-get update
sudo apt-get -y install nginx
echo "Holberton School" | sudo tee /usr/share/nginx/html/index.html
sudo sed -i "30i $REDIRECTION" /etc/nginx/sites-available/default
sudo service nginx start
