#!/usr/bin/env bash
# Configuration Nginx server so that /redirect_me is redirecting to another page.
sudo apt-get -y update
sudo apt-get -y install nginx

echo "Holberton School" | sudo tee /var/www/html/index.html
redir_ection="\\\trewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;"
sudo sed -i "37i $redir_ection" /etc/nginx/sites-available/default

sudo service nginx reload
sudo service nginx restart
